@model NutriBem.Models.Receita

@{
    ViewData["Title"] = "Create";
}

<h1>Criar nova Receita</h1>

<h4>Preencha os campos abaixo com os detalhes da sua receita:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredienteQuantidade" class="control-label"></label>
                <input asp-for="IngredienteQuantidade" class="form-control" />
                <span asp-validation-for="IngredienteQuantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MododePreparo" class="control-label"></label>
                <input asp-for="MododePreparo" class="form-control" />
                <span asp-validation-for="MododePreparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calorias" class="control-label"></label>
                <input asp-for="Calorias" class="form-control" type="text" />
                <span asp-validation-for="Calorias" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Index">Voltar</a> |
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
