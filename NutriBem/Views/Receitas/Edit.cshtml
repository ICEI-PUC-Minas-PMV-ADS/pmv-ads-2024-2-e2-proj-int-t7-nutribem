@model NutriBem.Models.Receita

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Receita</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredienteQuantidade" class="control-label"></label>
                <textarea asp-for="IngredienteQuantidade" class="form-control" rows="5"></textarea>
                <span asp-validation-for="IngredienteQuantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MododePreparo" class="control-label"></label>
                <textarea asp-for="MododePreparo" class="form-control" rows="5"></textarea>
                <span asp-validation-for="MododePreparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calorias" class="control-label"></label>
                <input asp-for="Calorias" class="form-control" type="text" />
                <span asp-validation-for="Calorias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Index">Voltar</a> |
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
