@model NutriBem.Models.Nutricionista

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4 pt-4 ps-5">Criar Nutricionista</h1>

<h4 class="mb-3 ps-5">Preencha as informações abaixo para criar um nutricionista:</h4>

<div class="container-fluid px-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Crn" class="control-label fw-bold"></label>
                    <input asp-for="Crn" class="form-control" style="border-color: #95B963;" placeholder="Ex.: 12345" />
                    <span asp-validation-for="Crn" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label fw-bold"></label>
                    <input asp-for="Nome" class="form-control" style="border-color: #95B963;" placeholder="Nome completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" style="border-color: #95B963;" type="email" placeholder="Ex.: nutricionista@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataNascimento" class="control-label fw-bold"></label>
                    <input asp-for="DataNascimento" class="form-control" style="border-color: #95B963;" type="date" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Senha" class="control-label fw-bold"></label>
                    <input asp-for="Senha" class="form-control" style="border-color: #95B963;" type="password" placeholder="Digite a senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Cpf" class="control-label fw-bold"></label>
                    <input asp-for="Cpf" class="form-control" style="border-color: #95B963;" placeholder="Ex.: 123.456.789-00" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefone" class="control-label fw-bold"></label>
                    <input asp-for="Telefone" class="form-control" style="border-color: #95B963;" placeholder="Ex.: (31) 98765-4321" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-4">
                    <input type="submit" value="Salvar" class="btn" style="background-color: #95B963; border-color: #95B963; color: black; font-weight: bold;" />
                </div>
            </form>
        </div>
    </div>
</div>

