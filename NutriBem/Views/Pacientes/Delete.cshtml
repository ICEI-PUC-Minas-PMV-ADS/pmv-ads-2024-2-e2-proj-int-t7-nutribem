@model NutriBem.Models.Paciente

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 pt-4 ps-5">Deletar Paciente</h1>

<h3 class="ps-5 mb-4">Tem certeza de que deseja deletar este paciente?</h3>

<div class="container-fluid px-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card p-4" style="border-color: #95B963;">

                <div class="mb-4 text-center">
                    <span class="fs-4 fw-bold" style="color: #95B963;">@Html.DisplayFor(model => model.Nome)</span>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Altura</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Altura)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Peso</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Peso)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Pagante</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Pagante)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">CPF Nutricionista</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CpfNutricionista)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Nome</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Email</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Data de Nascimento</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DataNascimento)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">CPF</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Cpf)
                        </dd>
                    </dl>
                </div>

                <div class="mb-3">
                    <hr style="border-color: #95B963;" />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Telefone</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Telefone)
                        </dd>
                    </dl>
                </div>

            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Cpf" />
                <div class="d-flex justify-content-between mt-4">
                    <a class="btn" style="background-color: #95B963; border-color: #95B963; color: black; font-weight: bold;" asp-action="Index">Voltar</a>
                    <input type="submit" value="Deletar" class="btn btn-danger" style="font-weight: bold; color: black;" />
                </div>
            </form>
        </div>
    </div>
</div>
