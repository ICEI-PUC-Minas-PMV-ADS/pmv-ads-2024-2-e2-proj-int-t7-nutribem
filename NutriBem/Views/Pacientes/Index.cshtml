@model IEnumerable<NutriBem.Models.Paciente>

@{
    ViewData["Title"] = "Lista de pacientes";
}

<h1>Lista de pacientes</h1>

<p>
    <a asp-action="Create">Criar novo paciente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpfNutricionista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pagante)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfNutricionista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagante)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cpf">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cpf">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cpf">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
