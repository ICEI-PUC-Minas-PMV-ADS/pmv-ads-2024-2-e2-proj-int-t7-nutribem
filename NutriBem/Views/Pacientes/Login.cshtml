@model NutriBem.Models.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4 pt-4">Login</h1>

<h4 class="text-center mb-4">Paciente</h4>

<div class="container-fluid px-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Cpf" class="control-label fw-bold"></label>
                    <input asp-for="Cpf" class="form-control" style="border-color: #95B963;" placeholder="Ex.: 123.456.789-00" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Senha" class="control-label fw-bold"></label>
                    <input asp-for="Senha" class="form-control" style="border-color: #95B963;" type="password" placeholder="Digite a senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-center mt-4">
                    <input type="submit" value="Acessar" class="btn" style="background-color: #95B963; border-color: #95B963; color: black; font-weight: bold;" />
                </div>
            </form>

            <h3 class="text-center">@ViewBag.Message</h3>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}