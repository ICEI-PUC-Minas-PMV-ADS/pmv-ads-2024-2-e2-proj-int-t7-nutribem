@model NutriBem.Models.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4 pt-4 ps-5">Editar Paciente</h1>

<h4 class="mb-3 ps-5">Atualize as informações do paciente:</h4>

<div class="container-fluid px-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Altura" class="control-label fw-bold"></label>
                    <input asp-for="Altura" class="form-control" style="border-color: #95B963;" placeholder="Ex.: 1.75" />
                    <span asp-validation-for="Altura" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Peso" class="control-label fw-bold"></label>
                    <input asp-for="Peso" class="form-control" style="border-color: #95B963;" placeholder="Ex.: 70.5" />
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="Pagante" id="pagante-check" />
                    <label class="form-check-label fw-bold" for="pagante-check">@Html.DisplayNameFor(model => model.Pagante)</label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CpfNutricionista" class="control-label fw-bold"></label>
                    <select asp-for="CpfNutricionista" class="form-control" style="border-color: #95B963;" asp-items="ViewBag.CpfNutricionista"></select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label fw-bold"></label>
                    <input asp-for="Nome" class="form-control" style="border-color: #95B963;" placeholder="Nome completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" style="border-color: #95B963;" type="email" placeholder="Ex.: paciente@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataNascimento" class="control-label fw-bold"></label>
                    <input asp-for="DataNascimento" class="form-control" style="border-color: #95B963;" type="date" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Cpf" class="control-label fw-bold"></label>
                    <input asp-for="Cpf" class="form-control" style="border-color: #95B963;" placeholder="Ex.: 123.456.789-00" readonly />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Senha" class="control-label fw-bold"></label>
                    <input asp-for="Senha" class="form-control" style="border-color: #95B963;" type="password" placeholder="Digite a senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefone" class="control-label fw-bold"></label>
                    <input asp-for="Telefone" class="form-control" style="border-color: #95B963;" placeholder="Ex.: (31) 98765-4321" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <a class="btn" style="background-color: #95B963; border-color: #95B963; color: black; font-weight: bold;" asp-action="Index">Voltar</a>
                    <input type="submit" value="Salvar" class="btn" style="background-color: #95B963; border-color: #95B963; color: black; font-weight: bold;" />
                </div>
            </form>
        </div>
    </div>
</div>

