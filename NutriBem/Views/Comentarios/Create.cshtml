@model NutriBem.Models.Comentario

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4 pt-4 ps-5">Diário Alimentar</h1>

<h2 class="ps-5 mb-1" style="font-size: 1.5rem;">Criar Anotação:</h2>

<div class="container-fluid px-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div class="p-4">

                    <div class="form-group mb-4">
                        <label asp-for="Nome" class="fw-bold">Seu Nome</label>
                        <input asp-for="Nome" class="form-control" style="border-color: #95B963;" required />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>


                    <div class="form-group mb-4">
                        <label asp-for="Conteudo" class="fw-bold">Anotações</label>
                        <textarea asp-for="Conteudo" class="form-control" style="border-color: #95B963;" required placeholder="Insira suas vitórias e desafios na sua jornada de saúde..." rows="10"></textarea>
                        <span asp-validation-for="Conteudo" class="text-danger"></span>
                    </div>


                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-danger" style="font-weight: bold; color: black; border-color: #be2929;">Cancelar</a>
                        <button type="submit" class="btn" style="background-color: #95B963; border-color: #95B963; color: black; font-weight: bold;">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

